<mvc:View controllerName="project0deneme.controller.View1Test"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m" xmlns:l="sap.ui.layout">
	<Page id="page" title="{i18n>title}">
		<IconTabBar
			id="idIconTabBarMulti"
			expanded="{device>/isNoPhone}"
			class="sapUiResponsiveContentPadding">
			<items>
				<IconTabFilter id="_IDGenIconTabFilter1" icon="sap-icon://hint" key="info">
					<VBox id="_IDGenVBox1">
						<Panel id="_IDGenPanel" headerText="Reverse, horizontal">
							<FlexBox id="_IDGenFlexBox" direction="RowReverse" alignItems="Start">
								<Button id="_IDGenButton" text="1" type="Emphasized" />
								<Button id="_IDGenButton1" text="2" type="Reject" />
								<Button id="_IDGenButton2" text="3" type="Accept" />
							</FlexBox>
						</Panel>
						<Panel id="_IDGenPanel1" headerText="Top to bottom, vertical">
							<FlexBox id="_IDGenFlexBox1" direction="Column" alignItems="Start">
								<Button id="_IDGenButton3" text="1" type="Emphasized" />
								<Button id="_IDGenButton4" text="2" type="Reject" />
								<Button id="_IDGenButton5" text="3" type="Accept" />
							</FlexBox>
						</Panel>
						<Panel id="_IDGenPanel2" headerText="Bottom to top, reverse vertical">
							<FlexBox id="_IDGenFlexBox2" direction="ColumnReverse" alignItems="Start">
								<Button id="_IDGenButton6" text="1" type="Emphasized" />
								<Button id="_IDGenButton7" text="2" type="Reject" />
								<Button id="_IDGenButton8" text="3" type="Accept" />
							</FlexBox>
						</Panel>
						<Panel id="_IDGenPanel3" headerText="Arbitrary flex item order">
							<FlexBox id="_IDGenFlexBox3" alignItems="Start">
								<Button id="_IDGenButton9" text="1" type="Emphasized" class="sapUiTinyMarginEnd">
									<layoutData>
										<FlexItemData id="_IDGenFlexItemData" order="2" />
									</layoutData>
								</Button>
								<Button id="_IDGenButton10" text="2" type="Reject" class="sapUiTinyMarginEnd">
									<layoutData>
										<FlexItemData id="_IDGenFlexItemData1" order="3" />
									</layoutData>
								</Button>
								<Button id="_IDGenButton11" text="3" type="Accept" class="sapUiTinyMarginEnd">
									<layoutData>
										<FlexItemData id="_IDGenFlexItemData2" order="1" />
									</layoutData>
								</Button>
							</FlexBox>
						</Panel>
					</VBox>
				</IconTabFilter>
				<IconTabFilter id="_IDGenIconTabFilter2"
				icon="sap-icon://attachment"
				key="attachments"
				count="3">
					<Text id="_IDGenText1" text="Attachments go here ..." />
				</IconTabFilter>
				<IconTabFilter id="_IDGenIconTabFilter3" 
				icon="sap-icon://notes" 
				key="notes" 
				count="12">
					<Text id="_IDGenText2" text="Notes go here ..." />
				</IconTabFilter>
				<IconTabFilter id="_IDGenIconTabFilter4" icon="sap-icon://group" key="people">
					<Text id="_IDGenText3" text="People content goes here ..." />
				</IconTabFilter>
			</items>
		</IconTabBar>
		<content />
	</Page>
</mvc:View>
